<div class="container rounded editar-usuario">
    <div class="row">
      <div class="col-lg-12">
        <div class="header">
          <h1>Editar Perfil</h1>
        </div>
      </div>
    </div>
    <form method = "post" form action="/usuario/update" enctype="multipart/form-data">
      
       <div class="form-row">
        <div class="form-group col-md-8 offset-md-1">
          <label for="inputNome">Nome</label>
          <input type="text" class="form-control" id="inputEmail" name="Nome" value="<%= usuario.Nome %>">
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-8 offset-md-1">
          <label for="inputEmail">Email</label>
          <input type="email" class="form-control" id="inputEmail" name="Email" value="<%= usuario.Email %>">
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-8 offset-md-1">
          <label for="inputEndereco">Endere√ßo</label>
          <input type="text" class="form-control" id="inputEndereco" name="Endereco" value="<%= usuario.Endereco %>">
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-4 offset-md-1">
          <label for="inputEstado">Estado</label>
          <select id="inputEstado" name="Estado" class="form-control">
            <option value="<%= usuario.Estado %>"><%= usuario.Estado %></option>
          </select>
        </div>
        <div class="form-group col-md-4 offset-md-2">
          <label for="inputCidade">Cidade</label>
          <select id="inputCidade" name="Cidade" class="form-control">
            <option value="<%= usuario.Cidade %>"><%= usuario.Cidade %></option>
          </select>
        </div>
      </div>


      <div class="form-row">
        <div class="form-group col-md-4 offset-md-1">
          <label for="inputTelefone">Telefone</label>
          <input class="form-control" id="inputTelefone" name="Telefone" value="<%= usuario.Telefone %>" type="text">
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-3 offset-md-1">
          <label for="inputSenha">Senha</label>
          <input type="password" name="Senha" class="form-control" id="inputSenha" value="<%= usuario.Senha %>">
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-group offset-md-1">
          <label for="inputFotoPerfil">Trocar foto de perfil</label>
          <input type="file" class="form-control-file" id="FotoPerfil" name="FotoPerfil">
        </div>
      </div>

      <div class= "form-row">
        <div class= "col-6 col-md-2 offset-md-1">
          <button type="submit" class="btn btn-danger" id="botaoCancelar"> Cancelar </button>
        </div>
        <div class= " col-6 col-md-2 offset-md-6 d-flex flex-row-reverse ">
          <button type="submit" class="btn btn-success" id="botaoFinalizar"> Atualizar </button>
        </div>
      </div>
    </form>
  </div>
